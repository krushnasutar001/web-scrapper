{
  "name": "linkedin-automation-saas-backend",
  "version": "2.0.0",
  "description": "LinkedIn Automation SaaS Backend - Refactored with MySQL, MVC Architecture, and Job Queue System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "legacy": "node simple-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:migrate": "node -e \"require('./utils/database').runMigrations()\"",
    "db:setup": "node -e \"require('./utils/database').initializeDatabase()\"",
    "worker:start": "node -e \"require('./services/jobWorker').initializeJobWorker()\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.4.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "puppeteer": "^24.21.0",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "linkedin",
    "automation",
    "scraping",
    "saas",
    "nodejs",
    "express",
    "mysql",
    "job-queue"
  ],
  "author": "LinkedIn Automation SaaS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/linkedin-automation-saas.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/linkedin-automation-saas/issues"
  },
  "homepage": "https://github.com/your-org/linkedin-automation-saas#readme"
}
