{
  "name": "linkedin-automation-saas-backend",
  "version": "2.0.0",
  "description": "LinkedIn Automation SaaS Backend - Refactored with MySQL, MVC Architecture, and Job Queue System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "legacy": "node simple-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration --testTimeout=60000 --runInBand",
    "test:integration:docker": "node scripts/run-integration-tests.js",
    "test:comprehensive": "node run-comprehensive-test.js",
    "test:multi-user": "node test-multi-user-environment.js",
    "test:setup-data": "node test-data-setup.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:migrate": "node -e \"require('./utils/database').runMigrations()\"",
    "db:setup": "node -e \"require('./utils/database').initializeDatabase()\"",
    "db:schema": "mysql -u root -p linkedin_automation < database/schema.sql",
    "db:test-data": "mysql -u root -p linkedin_automation < database/test-data.sql",
    "worker:start": "node -e \"require('./services/jobWorker').initializeJobWorker()\"",
    "worker:manager": "node -e \"require('./services/workerManager').startProcessing()\"",
    "worker": "node src/worker.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.9",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.4.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "playwright": "^1.55.1",
    "puppeteer": "^24.21.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer-extra-plugin-user-preferences": "^2.4.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.14.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "linkedin",
    "automation",
    "scraping",
    "saas",
    "nodejs",
    "express",
    "mysql",
    "job-queue"
  ],
  "author": "LinkedIn Automation SaaS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/linkedin-automation-saas.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/linkedin-automation-saas/issues"
  },
  "homepage": "https://github.com/your-org/linkedin-automation-saas#readme"
}
